@model Tehtavat
@{
    ViewData["Title"] = "Kulkukortti";
    Random r = new Random();
    int i = r.Next(1, Tehtavat.Kulkukortit.Count+1);
}
<div class="jumbotron">
    <h1>kulkukortti</h1>
    <p class="sankari">
        <a href="@Tehtavat.Kulkukortit[i]" target="_blank">Tässä</a> on kulkukortti, jonka nappasin Stockenten kätyriltä. Tällä pääsemme käsiksi Stockenten peiteyrityksen tietokantaan! Kerro kun olet sisällä.
    </p>
    <p>
        Ratkaise kulkukortin koodi jotta pääset lataamaan Stockenten tietokannasta listan henkilöistä joilla voi olla pääsy laserin käyttöön.
    </p>

    <form action="kulkukortti" method="post">
        <input type="text" name="korttikoodi" />
        <input type="submit" name="koodinappi" value="Anna koodi" />
        <input type="hidden" name="random" value="@i" />
    </form>
</div>